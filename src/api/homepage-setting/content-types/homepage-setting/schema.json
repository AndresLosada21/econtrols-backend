{
  "kind": "singleType",
  "collectionName": "homepage_setting",
  "info": {
    "singularName": "homepage-setting",
    "pluralName": "homepage-settings",
    "displayName": "Homepage Settings",
    "description": "Configurações e conteúdo específico da homepage (Hero, Métricas, etc.)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "groupName": {
      "type": "string",
      "default": "e-Controls - Grupo de Estudos em Controle de Sistemas",
      "description": "Nome completo do grupo - Seção Hero"
    },
    "tagline": {
      "type": "string",
      "default": "Excelência em Controle de Sistemas na Amazônia",
      "description": "Tagline principal - Seção Hero"
    },
    "institutionalAffiliation": {
      "type": "string",
      "default": "Universidade Federal do Amazonas (UFAM)",
      "description": "Afiliação institucional"
    },
    "department": {
      "type": "string",
      "default": "Departamento de Eletricidade - Faculdade de Tecnologia",
      "description": "Departamento"
    },
    "location": {
      "type": "string",
      "default": "Manaus, Amazonas, Brasil",
      "description": "Localização"
    },
    "introductionText": {
      "type": "richtext",
      "description": "Parágrafo introdutório (3-4 sentenças) sobre o grupo"
    },
    "foundingYear": {
      "type": "string",
      "default": "2015",
      "description": "Ano de fundação"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Logo do grupo (exibido no header e footer)"
    },
    "keyMetrics": {
      "type": "component",
      "repeatable": true,
      "component": "shared.key-metric",
      "description": "Métricas-chave exibidas na homepage"
    },
    "partnerLogos": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Logos das principais universidades parceiras"
    },
    "sectionVisibility": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-visibility",
      "description": "Controle quais seções aparecem na página inicial"
    },
    "defaultSeo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo",
      "description": "SEO padrão do site (usado como fallback)"
    },
    "heroBackground": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"],
      "description": "Imagem de fundo da seção Hero"
    },
    "aboutTitle": {
      "type": "string",
      "default": "Referência em Controle de Sistemas",
      "description": "Título principal da seção Sobre"
    },
    "projectsSection": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-header"
    },
    "teamSection": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-header"
    },
    "alumniSection": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-header"
    },
    "partnersSection": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-header"
    },
    "publicationsSection": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-header"
    },
    "newsSection": {
      "type": "component",
      "repeatable": false,
      "component": "layout.section-header"
    }
  }
}
